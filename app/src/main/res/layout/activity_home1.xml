<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#0C0C0C"
    tools:context=".MainActivity">

    <!-- Toolbar or AppBar -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F59EC"
        android:elevation="4dp"
        android:padding="8dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Content below Toolbar -->
    <TextView
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rangkings"
        android:textColor="#F3EDED"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Horizontal Scroll View -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#E1F5FE"
        android:padding="1dp"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <!-- Gambar 1 -->
            <LinearLayout
                android:id="@+id/gambar01"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:background="@drawable/elsia1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="8dp" />

            <!-- Gambar 2 -->
            <LinearLayout
                android:id="@+id/gambar02"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/elsia2"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="8dp" />

            <!-- Gambar 3 -->
            <LinearLayout
                android:id="@+id/gambar03"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/elsia3"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="8dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="REKOMENDED"
        android:textColor="#FAF7F7"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/gambar1"
                    android:layout_width="0dp"
                    android:layout_height="182dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/elsia4"
                    android:orientation="vertical"
                    android:padding="8dp" />

                <LinearLayout
                    android:id="@+id/gambar2"
                    android:layout_width="0dp"
                    android:layout_height="182dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/elsia5"
                    android:orientation="vertical"
                    android:padding="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/gambar3"
                    android:layout_width="0dp"
                    android:layout_height="182dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/elsia6"
                    android:orientation="vertical"
                    android:padding="8dp" />

                <LinearLayout
                    android:id="@+id/gambar4"
                    android:layout_width="0dp"
                    android:layout_height="182dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/mika_blue_archive_drawn_by_o_rakkasei__689c0167da1efb33351b0d65e0155919"
                    android:orientation="vertical"
                    android:padding="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="185dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/elsia6"
                    android:orientation="vertical"
                    android:padding="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="185dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/mika_blue_archive_drawn_by_o_rakkasei__689c0167da1efb33351b0d65e0155919"
                    android:orientation="vertical"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#545667"
        android:elevation="4dp"
        android:padding="6dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_gravity="bottom">

        <!-- LinearLayout to arrange ImageViews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <!-- Home Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Search Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/search"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Favorite Icon -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/favorit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/favorit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorite"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

</LinearLayout>
