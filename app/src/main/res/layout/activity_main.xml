<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000FF"
    tools:context=".MainActivity">

    <!-- Gambar di tengah -->
    <ImageView
        android:id="@+id/centerImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/mika_blue_archive_drawn_by_o_rakkasei__689c0167da1efb33351b0d65e0155919" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/centerImage"
        android:layout_marginTop="20dp"
        android:progress="50"
        android:progressTint="#FFFFFF" />

    <!-- Tulisan FanArt -->
    <TextView
        android:id="@+id/fanArtText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="FanArt"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:fontFamily="cursive" />

    <!-- Star Button -->
    <ImageView
        android:id="@+id/starButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fanArtText"
        android:layout_marginTop="20dp"
        android:src="@drawable/home" /> <!-- Replace with your star icon -->

</RelativeLayout>
